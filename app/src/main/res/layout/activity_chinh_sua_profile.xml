<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    tools:context="com.example.cuongtran.timtro.view.activity.ChinhSuaProfile">
    <android.support.v7.widget.Toolbar
        app:title="Cập nhật thông tin cá nhân "
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appColor">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tên: "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:id="@+id/edit_ten_SuaProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Nhập họ tên"
                    android:textColor="#2c32dc"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout

                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SĐT: "
                    android:textSize="20dp" />

                <EditText
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:id="@+id/edit_sdt_SuaProfile"
                    android:textColor="#2c32dc"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="sđt"/>

            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Địa Chỉ:"
                android:layout_margin="10dp"/>
            <EditText
                android:textCursorDrawable="@null"
                android:cursorVisible="true"
                android:hint="Nhập địa chỉ"
                android:id="@+id/edit_diaChi_SuaProfile"
                android:textColor="#2c32dc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_gravity="center"
        android:text="Cập Nhật"
        android:background="@drawable/mybutton"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

</LinearLayout>
