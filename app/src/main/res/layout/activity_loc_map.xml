<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.LocTinActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        app:title="Lọc Tin"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appColor">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá :"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/giaMap2"
            android:layout_marginRight="30dp"
            android:textColor="@color/appColor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...."
            android:textSize="15dp"/>


    </LinearLayout>
    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/seek_bar_gia_map2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:bar_color="#8990C4"
        app:bar_highlight_color="#8990C4"
        app:left_thumb_color="@color/appColor"
        app:right_thumb_color="@color/appColor"
        app:left_thumb_color_pressed="@color/appColor"
        app:right_thumb_color_pressed="@color/appColor"
        app:data_type="_float"
        app:min_value="0.0"
        app:max_value="15.0"
        app:steps="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích :"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/dientich_map2"
            android:layout_marginRight="30dp"
            android:textColor="@color/appColor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...."
            android:textSize="15dp"/>

    </LinearLayout>
    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/seek_bar_dientich_map2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:bar_color="#8990C4"
        app:bar_highlight_color="#8990C4"
        app:left_thumb_color="@color/appColor"
        app:right_thumb_color="@color/appColor"
        app:left_thumb_color_pressed="@color/appColor"
        app:right_thumb_color_pressed="@color/appColor"
        app:data_type="_integer"
        app:min_value="0"
        app:max_value="100"
        app:steps="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:textColor="#ffffff"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_apply_filter_map2"
            android:background="@drawable/mybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áp dụng"/>
    </LinearLayout>



</LinearLayout>