<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cuongtran.timtro.view.activity.RegisterActivity">
    <android.support.v7.widget.Toolbar
        app:title="Đăng kí"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appColor">

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/home_icon"/>

    <EditText
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:id="@+id/editTexthoTen_DangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:hint="Họ Tên" />

    <EditText
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:id="@+id/editTextUser_DangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:hint="Email"/>
    <EditText
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:id="@+id/editTextPass_DangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Mật Khẩu"
        android:textColor="@color/colorBlack"
        />
    <EditText
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:id="@+id/editTextRePass_DangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Nhập lại mật khẩu"
        android:textColor="@color/colorBlack"
        />

    <Button
        android:background="@drawable/mybutton"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="Đăng Ký"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/buttonDangKi_DangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
